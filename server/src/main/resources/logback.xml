<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyyMMdd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Turn off unnecessary JDBC logs -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="ERROR" />

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>